@model comandaOpe.Data.Models.Comanda
@{
    ViewBag.Title = "Comandas";
}

<form method="post" asp-action="CadastrarCliente">
    @if (TempData["cpfNaoCadastrado"] != null)
    {
        <p class="alert alert-danger">@TempData["cpfNaoCadastrado"]</p>
    }
    <label for="nome" class="form-label">Nome:</label>
    <input type="text" id="nome" name="nome" class="form-control" />

    <label for="cpf" class="form-label">CPF: </label>
    <input type="text" id="cpf" name="cpf" class="form-control" />

    <label for="numero_comanda" class="form-label">Numero da Comanda: </label>
    <input type="text" id="numero_comanda" name="numero_comanda" class="form-control" disabled="" value=@Model.numero_comanda />

    <div class="col-12 mb-3">
        <input name="comandaID" class="form-control" id="comandaID" hidden="hidden" value="@Html.Encode(Model.id)" />
    </div>

    @if (TempData["comandaIndisponiveis"] != null)
    {
        <p class="alert alert-danger">@TempData["comandaIndisponiveis"]</p>
    }

    <input type="submit" name="enviar" value="Salvar" />
</form>
