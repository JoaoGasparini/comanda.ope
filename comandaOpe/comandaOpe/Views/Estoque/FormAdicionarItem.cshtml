@model comandaOpe.Data.Models.Estoque

<head>
    <style>
        .sidenav {
            height: 100%;
            width: 90px;
            position: absolute;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #fff;
            overflow-x: hidden;
            padding-top: 20px;
            border-right: 1px solid #dee2e6;
        }

        .sidenav a {
            padding: 6px 8px 6px 16px;
            text-decoration: none;
            color: #818181;
            display: block;
        }

        .sidenav a:hover {
            color: #f1f1f1;
        }

        .main {
            margin-top: 20px;
            margin-left: 50px;
            padding: 0px 10px;
        }
    </style>
</head>

<div class="sidenav">
    <img class="nav-item" src="/images/aurelianos.png" style="width: 85px; height:85px;">
    <a asp-controller="Financeiro" asp-action="RelatorioClienteMes"><button type="button" style="border:none; background: transparent" class="btn mr-5" data-bs-toggle="tooltip" data-bs-placement="top" title="Relatorio"><i style="color:#000000" class="fas fa-file-invoice-dollar fa-2x"></i></button></a>
    <a asp-controller="Cozinha" asp-action="ListarPedidosEmAndamento"><button type="button" style="border:none; background: transparent" class="btn mr-5" data-bs-toggle="tooltip" data-bs-placement="top" title="Pedidos"><i style="color:#000000" class="fas fa-hamburger fa-2x"></i></button></a>
    <a asp-controller="Produto" asp-action="Produto"><button type="button" style="border:none; background: transparent" class="btn mr-5" data-bs-toggle="tooltip" data-bs-placement="top" title="Cardápio"><i style="color:#000000" class="fas fa-list-ol fa-2x"></i></button></a>
    <a asp-controller="Cliente" asp-action="Cliente"><button type="button" style="border:none; background: transparent" class="btn mr-5" data-bs-toggle="tooltip" data-bs-placement="top" title="Comandas"><i style="color: #000000" class="fas fa-th fa-2x"></i></button></a>
    <a asp-controller="Estoque" asp-action="ListarEstoque"><button type="button" style="border:none; background: transparent" class="btn mr-5" data-bs-toggle="tooltip" data-bs-placement="top" title="Estoque"><i style="color:#000000" class="fas fa-dolly-flatbed fa-2x"></i></button></a>
    <a asp-controller="Usuario" asp-action="Logout"><button type="button" style="border:none; background: transparent" class="btn mr-5" data-bs-toggle="tooltip" data-bs-placement="top" title="Sair"><i style="color:#000000" class="fas fa-sign-out-alt fa-2x"></i></button></a>
</div>


<div class="main">
    <h2 class="mb-3">Adicionar Produto</h2>
    <form method="post" asp-action="AdicionarItem" asp-controller="Estoque">
        <div class="form-floating mb-3">
            <div class="col-md-12">
                <label for="produto" class="form-label">Produto</label>
                <input type="text" name="produto" class="form-control" id="produto" placeholder="Insira o produto">
            </div>
            <div class="col-md-12">
                <label for="fornecedor" class="form-label">Fornecedor</label>
                <input type="text" name="fornecedor" class="form-control" id="fornecedor" placeholder="Insira o fornecedor">
            </div>
            <div class="col-md-4">
                <label for="quantidade" class="form-label">Quantidade</label>
                <input type="number" name="quantidade" class="form-control" id="quantidade" placeholder="Insira a quantidade">
            </div>
            <div class="col-md-12 mt-3">
                <label for="categoria" class="form-label">Categoria</label>
                <select name="categoria" id="categoria">
                    <option value="Grãos">Grãos</option>
                    <option value="Frutas">Frutas</option>
                    <option value="Carnes">Carnes</option>
                    <option value="Produtos Congelados">Produtos Congelados</option>
                    <option value="Bebidas">Bebidas</option>
                    <option value="Bebidas Alcoólicas">Bebidas Alcoólicas</option>
                    <option value="Produto de limpeza">Produto de limpeza</option>
                    <option value="Produto de escritorio">Produto de escritorio</option>
                    <option value="Outros">Outros</option>
                </select>
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="btn btn-success" value="Adicionar">Adicionar</button>
            </div>
        </div>
    </form>
</div>
