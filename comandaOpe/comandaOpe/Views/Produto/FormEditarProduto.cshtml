@model comandaOpe.Data.Models.Produto

<form class="row g-3" method="post">
    <div class="col-md-6">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" name="descricao" class="form-control" id="nome" value="@Html.Encode(Model.descricao)">
    </div>
    <div class="col-md-6">
        <label for="preco" class="form-label">Preço</label>
        <input type="number" name="preco" class="form-control" id="preco" value="@Html.Encode(Model.preco)" >
    </div>
    <div class="col-12">
        <label for="categoria" class="form-label">Categoria</label>
        <input type="text" name="categoria" class="form-control" id="categoria" value="@Html.Encode(Model.categoria)">
    </div>
    <div class="col-12">
        <input name="id" class="form-control" id="id" hidden="hidden" value="@Html.Encode(Model.id)"/>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary" asp-action="EditarProduto">Salvar</button>
    </div>
</form>